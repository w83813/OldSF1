<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181f2f"
    android:orientation="vertical"
    tools:context=".APmode">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="#89F7E5"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/autoswitch" />

    <TextView
        android:id="@+id/AS_mode_200or300SSID"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="@string/MH_setting_1"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00E64444"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/dec200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/AS300SSIDspineer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/underlinesetting"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="Here will be our text" />


            <EditText
                android:id="@+id/AS300SSIDPWD"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingLeft="7dp"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="1111111111" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="@string/MH_setting_2"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00E64444"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/dib" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/ASDIBSSIDspineer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/underlinesetting"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="Here will be our text" />


            <EditText
                android:id="@+id/ASDIBSSIDPWD"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingLeft="7dp"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="111111111" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView32"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="@string/MH_setting_3"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00E64444"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/epson" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/ASPRINTERSSIDspineer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/underlinesetting"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="Here will be our text" />


            <EditText
                android:id="@+id/ASPRINTERSSIDPWD"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingLeft="7dp"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="1111111111" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="@string/MH_setting_4"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00E64444"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/hub" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/ASHUBSSIDspineer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/underlinesetting"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="Here will be our text" />


            <EditText
                android:id="@+id/ASHUBSSIDPWD"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:gravity="center|center_horizontal"
                android:inputType="text"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingLeft="7dp"
                android:textAlignment="viewStart"
                android:textSize="17dp"
                tools:text="11111111111111" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutEdit"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ASsave"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/primary_button"
            android:text="@string/Save"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/primary_button"
            android:text="@string/Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>