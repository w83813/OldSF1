<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #181f2f">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stretchColumns="0,1,2"
        android:padding="20dp">

        <TableRow android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text="@string/Check_date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Check_Time"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </TableRow>

        <TableRow android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text="@string/Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/CheckPatientName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </TableRow>

        <TableRow android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text=" ID"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/CheckPatientID"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </TableRow>


        <TableRow android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text="@string/Birthady"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/CheckPatientBir"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text="@string/Gender"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/CheckPatientGender"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </TableRow>

        <TableRow android:background="#FFFFFF">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:text="@string/Phone"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/CheckPatientPhone"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background=" #181f2f"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:id="@+id/Biginputimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Bigphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/big_photo_library_button"
            app:srcCompat="@drawable/photobig" />

        <ImageView
            android:id="@+id/BigphotoLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/big_photo_library_button"
            app:srcCompat="@drawable/photo_librarybig" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLayout"
        android:layout_marginLeft="20dp"
        android:elevation="5dp"
        android:visibility="gone">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/photo"
                android:checked="false"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/photoLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/photo_library"
                android:onClick="onAlignmentSelected"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="擷取照片中 . . ."
                android:textSize="16sp"
                android:visibility="gone" />


        </RadioGroup>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/Frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputimage"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">
        <!--
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10pt"
                    android:gravity="center"
                    android:text="請輸入影像"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="15pt" />
                    -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#181f2f"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveEx"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Save"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/viewimage"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Viewimage"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/printer"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Print"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <Button
            android:id="@+id/cancelPatientexam"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/primary_button"
            android:text="@string/Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>